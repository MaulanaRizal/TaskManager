@model TaskManager.Models.Tasks;

    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    
    @using (Html.BeginForm("Insert","Home",FormMethod.Post)){
    
    <div class="modal-body">
        <div class="mb-3">
            @Html.LabelFor(m => m.title, new { @class = "form-label" } )
            @Html.TextBoxFor(model => model.title, new { @class = "form-control"  })
            <span asp-validation-for="title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.status, new { @class = "form-label" } )
            @Html.DropDownListFor(model => model.status, Html.GetEnumSelectList<Status>(), new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.status, new { @class = "form-label" } )
            @Html.TextAreaFor(m => m.description, new { @class = "form-control"})
        </div>


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
    

    }